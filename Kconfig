menu "Zephyr Kernel"
source "Kconfig.zephyr"
endmenu

module = OT_COMMAND_LINE_INTERFACE
module-str = ot_cli
source "$(ZEPHYR_BASE)/subsys/logging/Kconfig.template.log_config"

config CLI_SAMPLE_LOW_POWER
	bool "Low power mode for the CLI sample"

config CLI_SAMPLE_MULTIPROTOCOL
	bool "Multiprotocol for the CLI sample"

config NRFX_GPIOTE0
	default y if SOC_SERIES_NRF51X || \
		     SOC_SERIES_NRF52X || \
		     (SOC_SERIES_NRF53X && !TRUSTED_EXECUTION_NONSECURE) || \
		     (SOC_SERIES_NRF91X && !TRUSTED_EXECUTION_NONSECURE)

config NRFX_GPIOTE1
	default y if (SOC_SERIES_NRF53X && TRUSTED_EXECUTION_NONSECURE) || \
		     (SOC_SERIES_NRF91X && TRUSTED_EXECUTION_NONSECURE)

